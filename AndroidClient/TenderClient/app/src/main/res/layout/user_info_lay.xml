<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >
	<requestFocus></requestFocus>


	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center"
			android:orientation="vertical">

			<RelativeLayout
				android:id="@+id/user_infoview"
				android:layout_width="match_parent"
				android:layout_height="42dp"
				android:layout_margin="5dp"
				android:gravity="left|center_horizontal">

				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginTop="6dp"
					android:src="@drawable/person"/>
				<TextView
					android:layout_width="80dp"
					android:layout_height="40dp"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="15dp"
					android:gravity="right"
					android:textColor="#90000000"
					android:textSize="14sp"
					android:text="账户信息" />
			</RelativeLayout>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:background="#30000000"/>
			<RelativeLayout
				android:id="@+id/book_infoview"
				android:layout_width="match_parent"
				android:layout_height="42dp"
				android:layout_margin="5dp"
				android:gravity="left|center_horizontal">

				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginTop="6dp"
					android:src="@drawable/book_setting_icon"/>

				<TextView
					android:layout_width="80dp"
					android:layout_height="40dp"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="15dp"
					android:gravity="right"
					android:textColor="#90000000"
					android:textSize="14sp"
					android:text="订阅配置" />
			</RelativeLayout>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:background="#30000000"/>

			<RelativeLayout
				android:id="@+id/help_infoview"
				android:layout_width="match_parent"
				android:layout_height="42dp"
				android:layout_margin="5dp"
				android:gravity="left|center_horizontal">

				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginTop="6dp"
					android:src="@drawable/hezuo"/>

				<TextView
					android:layout_width="80dp"
					android:layout_height="40dp"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="15dp"
					android:gravity="right"
					android:textColor="#90000000"
					android:textSize="14sp"
					android:text="商务合作"
					/>
			</RelativeLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:background="#30000000"/>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="42dp"
				android:layout_margin="5dp"
				android:gravity="left|center_horizontal"
				>
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginTop="6dp"
					android:src="@drawable/service"/>
				<TextView
					android:id="@+id/service_t_lab"
					android:layout_width="80dp"
					android:layout_height="40dp"
					android:gravity="right"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="15dp"
					android:textColor="#90000000"
					android:layout_alignParentLeft="true"
					android:textSize="14sp"
					android:text="服务到期" />

				<EditText
					android:id="@+id/service_t_date"
					android:layout_width="140dip"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_marginLeft="10dp"
					android:textSize="26px"
					android:enabled="false"
					android:layout_toRightOf="@+id/service_t_lab"
					android:layout_toEndOf="@+id/service_t_lab" />

				<Button
					android:id="@+id/pay_btn"
					android:layout_width="60dip"
					android:layout_height="wrap_content"
					android:text="续费"
					android:textColor="#90000000"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true"
					android:textSize="14sp"
					android:layout_alignParentEnd="true" />
			</RelativeLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:background="#30000000"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
