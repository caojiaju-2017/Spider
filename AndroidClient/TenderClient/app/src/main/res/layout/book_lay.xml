<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
        android:gravity="right|center_vertical"
        android:background="#d0d0d0">
        <tender.tc.hs.tenderclient.ToggleButton
            android:id="@+id/mToggleButton01"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true">
        </tender.tc.hs.tenderclient.ToggleButton>

		<ImageView
			android:id="@+id/save_book_btn"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:src="@drawable/save"
			android:layout_alignParentRight="true"
			android:layout_marginRight="20dp"/>
	</RelativeLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <!--订阅邮箱-->
            <RelativeLayout style="@style/FindBottomStyle" >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="订阅邮箱" />

                <EditText
                    android:id="@+id/book_email"
                    android:layout_width="200dp"
                    android:layout_marginLeft="90dp"
                    android:textSize="26px"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <!--订阅号码-->
            <RelativeLayout style="@style/FindBottomStyle" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="订阅号码" />

                <EditText
                    android:id="@+id/book_phone"
                    android:layout_width="200dp"
                    android:layout_marginLeft="90dp"
                    android:textSize="26px"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <!--推送开始日期-->
            <RelativeLayout style="@style/FindBottomStyle" >

                <TextView
                    android:id="@+id/startdata_lab"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="开始日期" />

                <!--<EditText-->
                    <!--android:id="@+id/book_startdate"-->
                    <!--android:layout_width="200dp"-->
                    <!--android:layout_marginLeft="90dp"-->
                    <!--android:layout_height="match_parent" />-->
                <EditText
                    android:id="@+id/book_startdate"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="26px"
                    android:enabled="false"
                    android:layout_toRightOf="@+id/startdata_lab"
                    android:layout_toEndOf="@+id/startdata_lab" />

                <Button
                    android:id="@+id/but_showDate"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="选择日期"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <!--推送结束日期-->
            <RelativeLayout style="@style/FindBottomStyle" >

                <TextView
                    android:id="@+id/stopdata_lab"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:text="开始日期" />

                <!--<EditText-->
                <!--android:id="@+id/book_startdate"-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_marginLeft="90dp"-->
                <!--android:layout_height="match_parent" />-->
                <EditText
                    android:id="@+id/book_stopdate"
                    android:layout_width="200dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="26px"
                    android:enabled="false"
                    android:layout_toRightOf="@+id/stopdata_lab"
                    android:layout_toEndOf="@+id/stopdata_lab" />

                <Button
                    android:id="@+id/but_showDate2"
                    android:layout_width="90dip"
                    android:layout_height="wrap_content"
                    android:text="选择日期"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <!--关键字-->
            <RelativeLayout style="@style/FindBottomStyle" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="关键字1" />

                <EditText
                    android:id="@+id/book_key1"
                    android:layout_width="200dp"
                    android:layout_marginLeft="90dp"
                    android:textSize="26px"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <!--关键字-->
            <RelativeLayout style="@style/FindBottomStyle" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="关键字2" />

                <EditText
                    android:id="@+id/book_key2"
                    android:layout_width="200dp"
                    android:layout_marginLeft="90dp"
                    android:textSize="26px"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <!--关键字-->
            <RelativeLayout style="@style/FindBottomStyle" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="关键字3" />

                <EditText
                    android:id="@+id/book_key3"
                    android:layout_width="200dp"
                    android:layout_marginLeft="90dp"
                    android:textSize="26px"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <!--通知类型-->
            <RelativeLayout style="@style/FindBottomStyle" >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="通知类型" />
                <EditText
                    android:layout_width="200dp"
                    android:layout_marginLeft="90dp"
                    android:textSize="26px"
                    android:text="邮件通知"
                    android:enabled="false"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
